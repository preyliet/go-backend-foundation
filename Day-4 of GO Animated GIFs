package main

import (
	"image"
	"image/color"
	"image/gif"
	"math"
	"math/rand"
	"os"
)

// 1. THE PALETTE: A list of colors our "pen" can use.
// Index 0 is white, Index 1 is black.
var palette = []color.Color{color.White, color.Black}

func main() {
	// Create a file called "animation.gif" to save our work
	f, _ := os.Create("animation.gif")
	defer f.Close()

	// Run the drawing function and send the output to our file
	lissajous(f)
}

func lissajous(out *os.File) {
	const (
		cycles  = 5     // How many loops in the drawing
		res     = 0.001 // How smooth the lines are
		size    = 200   // Size of the canvas
		nframes = 64    // How many "cards" in our flipbook
		delay   = 8     // Speed of the animation
	)

	freq := rand.Float64() * 3.0
	anim := gif.GIF{LoopCount: nframes} // Create our "flipbook" box
	phase := 0.0

	for i := 0; i < nframes; i++ {
		// Create one "card" (frame) of the animation
		rect := image.Rect(0, 0, 2*size+1, 2*size+1)
		img := image.NewPaletted(rect, palette)

		// Draw the squiggle on this card
		for t := 0.0; t < cycles*2*math.Pi; t += res {
			x := math.Sin(t)
			y := math.Sin(t*freq + phase)
			// Set the dot to black (index 1 in our palette)
			img.SetColorIndex(size+int(x*size+0.5), size+int(y*size+0.5), 1)
		}

		phase += 0.1
		anim.Delay = append(anim.Delay, delay) // Add the delay to the box
		anim.Image = append(anim.Image, img)   // Put the card in the box
	}
	gif.EncodeAll(out, &anim) // Turn the box into a real GIF file
}

